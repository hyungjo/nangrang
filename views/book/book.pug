    // The Modal
    #myModal.modal
        .modal-dialog.modal-lg
            .modal-content
                // Modal Header
                .modal-header
                    h4.modal-title 도서 등록
                    button.close(type='button', data-dismiss='modal') ×
                // Modal body
                .modal-body
                    form(action='/account/password', method='POST')
                        input(type='hidden', name='_csrf', value=_csrf)
                        .row
                            .col-md-2.text-md-center
                                .form-group
                                    img.rounded.img-thumbnail(src='/img/book_temp.png', alt='이미지 등록')
